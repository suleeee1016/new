NODE_OPTIONS=--openssl-legacy-provider
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true

# Development Environment (Local)
# REACT_APP_API_URL=http://localhost:3001  # Sadece lokal
REACT_APP_API_URL=http://192.168.1.111:3001  # Network erişimi için IP adresi
REACT_APP_ENV=development
REACT_APP_STORAGE_TYPE=api

# Network Settings
REACT_APP_ALLOW_MULTIPLE_DEVICES=true
REACT_APP_ENABLE_CROSS_DEVICE_SYNC=true
REACT_APP_SESSION_SHARING=enabled

# Authentication Settings
REACT_APP_AUTH_ENABLED=true
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_REMEMBER_ME_DURATION=2592000000

# Locale Settings
REACT_APP_LOCALE=tr-TR
REACT_APP_TIMEZONE=Europe/Istanbul
REACT_APP_DATE_FORMAT=DD/MM/YYYY
REACT_APP_TIME_FORMAT=HH:mm

# Security Settings
REACT_APP_PASSWORD_MIN_LENGTH=6
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOCKOUT_DURATION=900000

# Production Environment (uncomment for production)
# REACT_APP_API_URL=https://your-api-server.com/api
# REACT_APP_ENV=production  
# REACT_APP_STORAGE_TYPE=api
# REACT_APP_AUTH_ENABLED=true
